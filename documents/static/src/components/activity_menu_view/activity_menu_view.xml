<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-inherit="mail.ActivityMenuView" t-inherit-mode="extension">
        <xpath expr="//*[@name='activityGroupLoop']" position="after">
            <div t-if="messaging.hasDocumentsUserGroup" class="o_sys_documents_request d-grid" t-on-click="activityMenuView.onClickRequestDocument">
                <a role="button" class="btn text-center">Request a Document</a>
            </div>
        </xpath>
    </t>
</templates>
